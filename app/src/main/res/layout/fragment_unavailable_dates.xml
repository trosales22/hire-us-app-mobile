<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/galaxy_bg"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Unavailable Dates"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            tools:ignore="HardcodedText" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colordevider"
            android:padding="16dp" />

        <cz.kinst.jakub.view.SimpleStatefulLayout
            android:id="@+id/stateful_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:emptyLayout="@layout/state_empty"
            app:offlineLayout="@layout/state_offline"
            app:progressLayout="@layout/state_progress">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView_unavailableDates"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical" />

        </cz.kinst.jakub.view.SimpleStatefulLayout>

    </LinearLayout>

</ScrollView>