<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="#f2f2f2"
    tools:context=".activities.TalentModelProfileActivity">

    <ScrollView
        android:layout_marginTop="55dp"
        android:layout_marginBottom="49dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ws.wolfsoft.get_detail.SliderLayout
                android:id="@+id/slider"
                android:layout_width="match_parent"
                custom:pager_animation_span="1100"
                android:layout_height="300dp"
                style="@style/AndroidImageSlider_Oval_Black"
                android:background="#fff" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#fff">

                <!--*********Iphone price**********-->

                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <customfonts.MyTextView
                        android:visibility="visible"
                        android:id="@+id/iphone6s"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="iPhone 6S"
                        android:textSize="21dp"
                        android:textColor="@color/colorTex"
                        />

                    <customfonts.MyTextView
                        android:id="@+id/price"
                        android:layout_weight="5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="750 $"
                        android:textSize="21dp"
                        android:textColor="@color/colorTex" />
                </LinearLayout>


                <!--*********Shipping**********-->

                <LinearLayout

                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <customfonts.MyTextView
                        android:id="@+id/free"
                        android:layout_width="110dp"
                        android:layout_height="28dp"
                        android:background="@drawable/rect"
                        android:text="Free Shipping"
                        android:textColor="#fff"
                        android:gravity="center" />

                    <LinearLayout
                        android:layout_marginLeft="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <customfonts.MyTextView
                            android:layout_weight="1"
                            android:id="@+id/est"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Est. delivery"
                            android:textSize="13dp"
                            android:textColor="@color/colorSub" />

                        <customfonts.MyTextView
                            android:layout_weight="0.8"
                            android:id="@+id/date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Feb 17-20"
                            android:textSize="13dp"
                            android:textColor="@color/colorTex" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colordevider"
                    android:padding="16dp" />

                <!--*********Iphone price**********-->

                <LinearLayout

                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <customfonts.MyTextView
                        android:id="@+id/condition1"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Condition"
                        android:textColor="@color/colorSub" />

                    <customfonts.MyTextView
                        android:id="@+id/condition2"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="New with box"
                        android:textColor="@color/colorTex" />
                </LinearLayout>

                <!--*********Brand**********-->

                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <customfonts.MyTextView
                        android:id="@+id/brand1"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Brand"
                        android:textColor="@color/colorSub" />

                    <customfonts.MyTextView
                        android:id="@+id/brand2"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Apple"
                        android:textColor="@color/colorTex" />
                </LinearLayout>

                *********size**********

                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <customfonts.MyTextView
                        android:id="@+id/size1"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dimensions"
                        android:textColor="@color/colorSub" />

                    <customfonts.MyTextView
                        android:id="@+id/size2"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="138.3 * 67.1mm"
                        android:textColor="@color/colorTex" />
                </LinearLayout>


                <!--*********weight**********-->

                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <customfonts.MyTextView
                        android:id="@+id/weight1"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Weight"
                        android:textColor="@color/colorSub" />

                    <customfonts.MyTextView
                        android:id="@+id/weight2"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="143 grams"
                        android:textColor="@color/colorTex" />
                </LinearLayout>

                <!--*********show more**********-->

                <LinearLayout
                    android:id="@+id/linear1"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <customfonts.MyTextView
                        android:id="@+id/show1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SHOW MORE"
                        android:textColor="#4c71f5"
                        android:textSize="11dp"
                        android:gravity="center"
                        android:drawableRight="@drawable/arrow"
                        android:drawablePadding="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear2"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--*********weight**********-->

                    <LinearLayout
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <customfonts.MyTextView
                            android:id="@+id/display1"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Display"
                            android:textColor="@color/colorSub" />

                        <customfonts.MyTextView
                            android:id="@+id/display2"
                            android:layout_weight="0.5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="4.7 inch"
                            android:textColor="@color/colorTex" />
                    </LinearLayout>


                    <!--*********camera**********-->

                    <LinearLayout

                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <customfonts.MyTextView
                            android:id="@+id/camera1"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="iSight Camera"
                            android:textColor="@color/colorSub" />

                        <customfonts.MyTextView
                            android:id="@+id/camera2"
                            android:layout_weight="0.5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="12-megapixel with 1.22µ pixels"
                            android:textColor="@color/colorTex" />
                    </LinearLayout>


                    <!--*********video**********-->

                    <LinearLayout

                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <customfonts.MyTextView
                            android:id="@+id/video1"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Video Recording"
                            android:textColor="@color/colorSub" />

                        <customfonts.MyTextView
                            android:id="@+id/video2"
                            android:layout_weight="0.5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="4K video recording (3840x2160)"
                            android:textColor="@color/colorTex" />
                    </LinearLayout>

                    <!--*********Sim**********-->

                    <LinearLayout
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <customfonts.MyTextView
                            android:id="@+id/sim1"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="SIM Card"
                            android:textColor="@color/colorSub" />

                        <customfonts.MyTextView
                            android:id="@+id/sim2"
                            android:layout_weight="0.5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nano-SIM"
                            android:textColor="@color/colorTex" />
                    </LinearLayout>

                    <!--*********show less**********-->

                    <LinearLayout
                        android:id="@+id/showless"
                        android:gravity="center"
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <customfonts.MyTextView
                            android:id="@+id/show2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SHOW LESS"
                            android:textColor="#4c71f5"
                            android:textSize="11dp"
                            android:gravity="center"
                            android:drawableRight="@drawable/arrow1"
                            android:drawablePadding="8dp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colordevider"
                    android:padding="16dp" />

                <!--*********description**********-->

                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <customfonts.MyTextView
                        android:id="@+id/disc1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Item description"
                        android:textColor="@color/colorSub"
                        android:drawableRight="@drawable/arrow2" />

                </LinearLayout>

                <View
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colordevider"
                    android:padding="16dp" />

                <!--*********Est. delivery**********-->

                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <customfonts.MyTextView
                        android:layout_weight="1"
                        android:id="@+id/estdelivery1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Est. delivery"
                        android:textColor="@color/colorSub" />

                    <customfonts.MyTextView
                        android:id="@+id/estdelivery2"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tue, Feb 17 - Fri, Feb 18"
                        android:textColor="@color/colorTex"
                        android:drawableRight="@drawable/arrow2" />

                </LinearLayout>

                <View
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colordevider"
                    android:padding="16dp" />

                <!--*********Returns**********-->

                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <customfonts.MyTextView
                        android:layout_weight="1"
                        android:id="@+id/return1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Returns"
                        android:textColor="@color/colorSub" />

                    <customfonts.MyTextView
                        android:id="@+id/return2"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Not accepted"
                        android:textColor="@color/colorTex" />

                </LinearLayout>

                <View
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colordevider"
                    android:padding="16dp" />

                <!--*********Guarantee**********-->

                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <customfonts.MyTextView
                        android:layout_weight="1"
                        android:id="@+id/guarantee1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Returns"
                        android:textColor="@color/colorSub" />

                    <customfonts.MyTextView
                        android:id="@+id/guarantee2"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Money Back Guarantee"
                        android:textColor="@color/colorTex"
                        android:drawableRight="@drawable/arrow2" />

                </LinearLayout>

                <View
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colordevider"
                    android:padding="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#f2f2f2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="REVIEWS"
                        android:padding="16dp"
                        android:textSize="13dp"
                        android:textColor="@color/colorSub" />

                    <ws.wolfsoft.get_detail.ExpandableHeightListView
                        android:id="@+id/listview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#fff"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!--****buy****-->
    <customfonts.MyTextView
        android:id="@+id/buy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4c71f5"
        android:text="Add to Booking List"
        android:textSize="16dp"
        android:textColor="#fff"
        android:gravity="center"
        android:padding="16dp"
        android:layout_alignParentBottom="true" />
</RelativeLayout>




