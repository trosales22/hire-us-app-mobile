<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="#f2f2f2"
    tools:context=".activities.TalentModelProfileActivity">

    <ScrollView
        android:layout_marginBottom="49dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ws.wolfsoft.get_detail.SliderLayout
                android:id="@+id/talentGallerySlider"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                custom:pager_animation_span="1100"
                android:background="#fff"
                style="@style/AndroidImageSlider_Oval_Black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#fff">

                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <customfonts.MyTextView
                        android:id="@+id/lblTalentFullname"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Talent Name"
                        android:textSize="21sp"
                        android:visibility="visible"
                        android:textColor="@color/colorTex"
                        tools:ignore="HardcodedText,InefficientWeight" />

                </LinearLayout>

                <LinearLayout
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <customfonts.MyTextView
                        android:id="@+id/lblTalentCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rect"
                        android:text="Category"
                        android:textColor="#FFFF"
                        android:padding="5dp"
                        android:gravity="center"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colordevider"
                    android:padding="16dp" />

                <!-- Talent Vital Stats -->

                <LinearLayout
                    android:id="@+id/linearLayoutVitalStats"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <customfonts.MyTextView
                        android:id="@+id/lblTalentVitalStatsCaption"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vital Statistics"
                        android:textColor="@color/colorSub"
                        tools:ignore="HardcodedText" />

                    <customfonts.MyTextView
                        android:id="@+id/lblTalentVitalStats"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vital Statistics"
                        android:textColor="@color/colorTex"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colordevider"
                    android:padding="16dp" />

                <!-- Talent Genre -->

                <LinearLayout
                    android:id="@+id/linearLayoutTalentGenre"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <customfonts.MyTextView
                        android:id="@+id/lblTalentGenreCaption"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Genre"
                        android:textColor="@color/colorSub"
                        tools:ignore="HardcodedText" />

                    <customfonts.MyTextView
                        android:id="@+id/lblTalentGenre"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Genre"
                        android:textColor="@color/colorTex"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colordevider"
                    android:padding="16dp" />

                <!-- Talent Followers -->

                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <customfonts.MyTextView
                        android:id="@+id/lblTalentFollowersCaption"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Social Media Followers"
                        android:textColor="@color/colorSub"
                        tools:ignore="HardcodedText" />

                    <customfonts.MyTextView
                        android:id="@+id/lblTalentFollowers"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Facebook: 1000\nInstagram: 1000"
                        android:textColor="@color/colorTex"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colordevider"
                    android:padding="16dp" />

                <!-- Talent Location -->

                <LinearLayout
                    android:id="@+id/linearLayoutLocation"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <customfonts.MyTextView
                        android:id="@+id/lblTalentLocationCaption"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:textColor="@color/colorSub"
                        tools:ignore="HardcodedText" />

                    <customfonts.MyTextView
                        android:id="@+id/lblTalentLocation"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="City, Province"
                        android:textColor="@color/colorTex"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutShowMoreDetails"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colordevider"
                        android:padding="16dp" />

                    <!-- Talent Description -->

                    <LinearLayout
                        android:id="@+id/linearLayoutTalentDescription"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <customfonts.MyTextView
                            android:id="@+id/lblTalentDescriptionCaption"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Description"
                            android:textColor="@color/colorSub"
                            tools:ignore="HardcodedText" />

                        <customfonts.MyTextView
                            android:id="@+id/lblTalentDescription"
                            android:layout_weight="0.5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="&#34;A professional web/mobile developer.&#34;"
                            android:textColor="@color/colorTex"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>

                    <!-- Talent Height -->

                    <LinearLayout
                        android:id="@+id/linearLayoutTalentHeight"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <customfonts.MyTextView
                            android:id="@+id/lblTalentHeightCaption"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Height"
                            android:textColor="@color/colorSub"
                            tools:ignore="HardcodedText" />

                        <customfonts.MyTextView
                            android:id="@+id/lblTalentHeight"
                            android:layout_weight="0.5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="5&#39;2&#34;"
                            android:textColor="@color/colorTex"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>

                    <!-- Experience / Previous Clients -->

                    <LinearLayout
                        android:id="@+id/linearLayoutExperienceOrPreviousClients"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <customfonts.MyTextView
                            android:id="@+id/lblExperiencesOrPreviousClientsCaption"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Previous Clients"
                            android:textColor="@color/colorSub"
                            tools:ignore="HardcodedText" />

                        <customfonts.MyTextView
                            android:id="@+id/lblExperiencesOrPreviousClients"
                            android:layout_weight="0.5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=">Asiagate Networks, Inc. (1yr &amp; 2months)\n>Journeytech, Inc. (1week)\n"
                            android:textColor="@color/colorTex"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colordevider"
                    android:padding="16dp" />

                <View
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colordevider"
                    android:padding="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#f2f2f2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="REVIEWS"
                        android:padding="16dp"
                        android:textSize="13sp"
                        android:textColor="@color/colorSub"
                        tools:ignore="HardcodedText" />

                    <ws.wolfsoft.get_detail.ExpandableHeightListView
                        android:id="@+id/reviewsListView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#fff"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Buttons -->

    <customfonts.MyTextView
        android:id="@+id/btnAddToBookingList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4c71f5"
        android:text="Add to Booking List"
        android:textSize="16sp"
        android:textColor="#fff"
        android:gravity="center"
        android:padding="16dp"
        android:layout_alignParentBottom="true"
        tools:ignore="HardcodedText" />

    <customfonts.MyTextView
        android:id="@+id/btnInquireNow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4c71f5"
        android:text="Inquire Now"
        android:textSize="16sp"
        android:textColor="#fff"
        android:gravity="center"
        android:padding="16dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        tools:ignore="HardcodedText" />
</RelativeLayout>




