<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_talents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:id="@+id/relativeLayoutTalentDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgTalentDisplayPhoto"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:clickable="true"
                android:scaleType="fitXY"
                android:src="@drawable/no_profile_pic"
                android:focusable="true"
                card_view:ignore="ContentDescription" />

            <TextView
                android:id="@+id/lblTalentFullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgTalentDisplayPhoto"
                android:layout_marginBottom="5dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textAlignment="center"
                android:gravity="center"
                android:text="Talent Fullname"
                card_view:ignore="HardcodedText" />

            <TextView
                android:id="@+id/lblTalentHourlyRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lblTalentFullname"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="12sp"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:gravity="start"
                android:text="Talent Hourly Rate"
                card_view:ignore="HardcodedText,RtlSymmetry" />

            <TextView
                android:id="@+id/lblTalentCategories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lblTalentHourlyRate"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/textview_border_style_color_primary"
                android:textStyle="bold"
                android:textSize="12sp"
                android:padding="5dp"
                android:textColor="@color/colorPrimaryDarker"
                android:text="Categories"
                card_view:ignore="HardcodedText" />

            <TextView
                android:id="@+id/lblTalentLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lblTalentCategories"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:gravity="start"
                android:text="Talent Location"
                card_view:ignore="HardcodedText,RtlSymmetry" />

        </RelativeLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>
