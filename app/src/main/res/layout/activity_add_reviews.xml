<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.AddReviewsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                        android:id="@+id/cmbTalentCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Talent Category"
                        app:met_floatingLabel="normal"
                        app:met_baseColor="@color/black"
                        app:met_textColor="@color/black"
                        app:met_textColorHint="@color/black"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        tools:ignore="HardcodedText" />

                    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                        android:id="@+id/cmbTalentName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Talent Name"
                        app:met_floatingLabel="normal"
                        app:met_baseColor="@color/black"
                        app:met_textColor="@color/black"
                        app:met_textColorHint="@color/black"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        tools:ignore="HardcodedText"
                        android:layout_below="@id/cmbTalentCategory"/>

                    <EditText
                        android:id="@+id/txtReviewsDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Write your comments or reviews.."
                        android:inputType="text|textMultiLine"
                        android:maxLength="50"
                        android:maxLines="8"
                        tools:ignore="HardcodedText"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_below="@id/cmbTalentName"/>

                </RelativeLayout>

            </ScrollView>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSubmitReviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="15dp"
            android:text="Submit Reviews"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>