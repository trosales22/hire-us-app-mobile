<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/booking_details_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical"
        android:padding="5sp"
        app:behavior_hideable="true"
        app:behavior_peekHeight="56dp"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:layout_weight="0.5"
                android:text="Booking Details"
                android:textColor="#444"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <!-- Booking ID -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:layout_weight="0.5"
                android:text="Booking ID"
                android:textColor="#444"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/lblBookingGeneratedId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="Booking ID"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlHardcoded" />
        </LinearLayout>

        <!-- Event Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:layout_weight="0.5"
                android:text="Event Title"
                android:textColor="#444"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/lblBookingEventTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="Event Title"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlHardcoded" />
        </LinearLayout>

        <!-- Talent Fee -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:layout_weight="0.5"
                android:text="Talent Fee"
                android:textColor="#444"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/lblBookingTalentFee"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="Talent Fee"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlHardcoded" />
        </LinearLayout>

        <!-- Venue/Location -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:layout_weight="0.5"
                android:text="Venue/Location"
                android:textColor="#444"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/lblBookingVenueOrLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="Venue/Location"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlHardcoded" />
        </LinearLayout>

        <!-- Payment Option -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:layout_weight="0.5"
                android:text="Payment Option"
                android:textColor="#444"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/lblBookingPaymentOption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="Payment Option"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlHardcoded" />
        </LinearLayout>

        <!-- Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:layout_weight="0.5"
                android:text="Working Dates"
                android:textColor="#444"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/lblBookingDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="Working Dates"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlHardcoded" />
        </LinearLayout>

        <!-- Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:layout_weight="0.5"
                android:text="Working Hours"
                android:textColor="#444"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/lblBookingTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="Working Hours"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlHardcoded" />
        </LinearLayout>

        <!-- Other Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:layout_weight="0.5"
                android:text="Other Details"
                android:textColor="#444"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/lblBookingOtherDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="Other Details"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlHardcoded" />
        </LinearLayout>

        <!-- Offer Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:layout_weight="0.5"
                android:text="Offer Status"
                android:textColor="#444"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/lblBookingOfferStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="Offer Status"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlHardcoded" />
        </LinearLayout>

        <!-- Created Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:layout_weight="0.5"
                android:text="Created Date"
                android:textColor="#444"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/lblBookingCreatedDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="Created Date"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlHardcoded" />
        </LinearLayout>

        <!-- Decline Reason -->
        <LinearLayout
            android:id="@+id/linearLayoutBookingDeclineReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:layout_weight="0.5"
                android:text="Decline Reason"
                android:textColor="#444"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/lblBookingDeclineReason"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="Created Date"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlHardcoded" />
        </LinearLayout>

        <!-- Approved/Declined Date -->
        <LinearLayout
            android:id="@+id/linearLayoutBookingApprovedOrDeclinedDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:layout_weight="0.5"
                android:text="Approved/Declined Date"
                android:textColor="#444"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/lblBookingApprovedOrDeclinedDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="Approved/Declined Date"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlHardcoded" />
        </LinearLayout>


        <!-- Clients Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:layout_weight="0.5"
                android:text="Client Details"
                android:textColor="#444"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <!-- Client Gender -->
        <LinearLayout
            android:id="@+id/linearLayoutClientGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:layout_weight="0.5"
                android:text="Gender"
                android:textColor="#444"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/lblClientGender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="Client Gender"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlHardcoded" />
        </LinearLayout>

        <!-- Client Type -->
        <LinearLayout
            android:id="@+id/linearLayoutClientType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:layout_weight="0.5"
                android:text="Type"
                android:textColor="#444"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/lblClientType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="Client Type"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlHardcoded" />
        </LinearLayout>


        <!-- Buttons -->
        <Button
            android:id="@+id/btnCloseBookingAndClientDetailsDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:background="#fc6177"
            android:text="Close"
            android:textColor="#fff"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnApproveBooking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:background="#f4a261"
            android:text="Approve"
            android:textColor="#fff"
            tools:ignore="HardcodedText" />

        <!-- Choose Decline Reason -->
        <LinearLayout
            android:id="@+id/linearLayoutChooseDeclineReasonCaption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Choose Decline Reason"
                android:textColor="#444"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <RadioGroup
            android:id="@+id/rgDeclineReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <RadioButton
                    android:id="@+id/rbTalentFee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:checked="false"
                    android:text=" Talent Fee"
                    tools:ignore="HardcodedText" />

                <RadioButton
                    android:id="@+id/rbDateUnavailability"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:checked="false"
                    android:text="Date Unavailability"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <RadioButton
                    android:id="@+id/rbLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:checked="false"
                    android:text="Location"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

        </RadioGroup>

        <Button
            android:id="@+id/btnDeclineBooking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:background="@color/colorPrimary"
            android:text="Decline"
            android:textColor="#fff"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</ScrollView>
